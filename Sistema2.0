import textwrap #permite formatar textos

def menu():

    menu = """\n

    ============MENU BANCÁRIO===========
    [+]\t  Entrar na Conta
    [++]\t  Criar Usuário
    [1]\t  Consulta Extrato
    [2]\t  Saque
    [3]\t  Deposito
    [4]\t  Lista de Contas
    [0]\t  Sair

    ==========================
    => """

    return input(textwrap.dedent(menu))

def depositar(saldo, valor, extrato, /):

    if valor > 0:
        saldo += valor
        extrato += f"Depósito:\tR$ {valor:.2f}\n"
        print('\n=== O Depósito foi realizado com sucesso! ===')
    else:
        print("\n### A operação não foi concluída. O valor informado é inválido. ###")

    return saldo, extrato

def sacar(*, saldo, valor, extrato, limite, numero_saques, limite_saques):
    excede_saldo = valor > saldo
    excede_limite = valor > limite
    excede_saques = numero_saques >= limite_saques

    if excede_saldo:
        print("\n### A operação não foi concluída. O valor do saque excede o saldo disponível. ###")
    elif excede_limite:
        print("\n### A operação não foi concluída. O valor do saque excede o seu limite. Entre em contato com o gerente. ###")
    elif excede_saques:
        print("\n### A operação não foi concluída. O seu limite de saque diário foi atingido. Tente novamente mais tarde. ###")

    elif valor > 0:
        saldo -= valor
        extrato +=f"Saque:\tR$ {valor:.2f}\n"
        numero_saques += 1
        print('\n=== O Saque foi realizado com sucesso! ===')
    else:
        print("\n### A operação não foi concluída. O valor informado é inválido. ###")

    return saldo, extrato

def mostrar_extrato(saldo, /, *, extrato):
    print("\n ============= EXTRATO DA CONTA ==============")
    print("\nNenhuma movimentação realizada." if not extrato else extrato)
    print(f"\nSaldo: R$ {saldo:.2f}")
    print("====================================\n")


def criar_usuario(usuarios):
    cpf = input("Informe o CPF (somente números): ")
    usuario = filtrar_usuario(cpf, usuarios)

    if usuario:
        print("\n### Um usuário com esse CPF ja foi cadastrado. ###")
        return
    
    nome = input("Informe o seu nome completo: ")
    data_nascimento = input("Informe a data de nascimento (dd-mm-aaaa): ")
    endereco = input("Informe o endereço completo (casa, número, bairro, cidade/sigla estado): ")

    usuarios.append({"nome": nome, "data_nascimento": data_nascimento, "cpf": cpf, "endereco": endereco})

    print("\n===== Usuário cadastrado com sucesso! =====")


def filtrar_usuario(cpf, usuarios):
    usuarios_filtrados = [usuario for usuario in usuarios if usuario["cpf"] == cpf]
    return usuarios_filtrados[0] if usuarios_filtrados else None

def abrir_conta(agencia, numero_conta, usuarios):
    cpf = input("Informe o CPF do titular da conta: ")
    usuario = filtrar_usuario(cpf, usuarios)

    if usuario:
        print("\n===== Sua conta foi criada com sucesso. Bem-vindo(a)! =====")
        return {"agencia": agencia, "numero_conta": numero_conta, "usuario": usuario}
    
    print("\n### Usuário nao encontrado, fluxo de criação de conta encerrado. ###")

def listagem_contas(contas):
    for conta in contas:
        escrita = f"""

        Agência:\t{conta['agencia']}
        Conta:\t{conta['numero_conta']}
        Titular:\t{conta['usuario']['nome']}
        """
        print("=" * 100)
        print(textwrap.dedent(escrita))

def main():
    Limite_Saque = 3
    Agencia = "0001"

    saldo = 0
    limite = 500
    extrato = ""
    numero_saques = 0
    usuarios = []
    contas = []

    while True:
        opcao = menu()

        if opcao == "+": #Nova Conta
            numero_conta = len(contas) + 1
            conta = abrir_conta(Agencia, numero_conta, usuarios)

            if conta:
                contas.append(conta) 



        elif opcao == "++": #Novo Usuário
            criar_usuario(usuarios)

        

        elif opcao == "1":  #Extrato
            mostrar_extrato(saldo, extrato=extrato)

        

        elif opcao == "2":  #Saque
            valor = float(input("Digite o valor do saque: "))

            saldo, extrato = sacar(saldo=saldo, valor=valor, extrato=extrato, limite=limite, numero_saques=numero_saques, limite_saques=Limite_Saque)
        

        
        elif opcao == "3": #Deposito
            valor = float(input("Informe o valor do depósito:"))

            saldo, extrato = depositar(saldo, valor, extrato)

        

        elif opcao == "4": #Listagem de Contas
            listagem_contas(contas)

        

        elif opcao == "0": #Sair
            print("Obrigado por utilizar nossos serviços!")
            break

        

        else:
            print("Operação inválida, por favor, escolha novamente a opção desejada.")

main ()
            
