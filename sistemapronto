menu = """

===========MENU BANCÁRIO===========

[1] Consulta Extrato
[2] Saque
[3] Deposito
[0] Sair

=========================
=> """

saldo = 0
limite_valor = 500
limite_de_saques= 3
extrato = ""
numero_saques = 0


while True:

    opcao = input(menu)

    if opcao == "1":                                                                                #CONSULTA EXTRATO
        print("\n ============= EXTRATO ==============")
        print("\nNenhuma movimentação realizada." if not extrato else extrato)
        print(f"\nSaldo: R$ {saldo:.2f}")
        print("====================================\n")

    elif opcao == "2":                                                                              #SAQUE
        valor = float(input("Qual o valor do saque? "))                                             #solicita o valor

        excede_saldo = valor > saldo                                                                #verifica se o valor do saque excede o saldo
        excede_limite = valor > limite_valor                                                        #verifica se o valor do saque excede o limite
        excedeu_saques = numero_saques >= limite_de_saques                                             #verifica se o limite de saques foi excedido

        if excede_saldo:                                                                            
            print("Operação cancelada! Você não possui saldo suficiente.")
        elif excede_limite:
            print("Operação cancelada! O valor do saque excede o seu limite. Entre em contato com o gerente. \n")
        elif excedeu_saques:
            print("Operação cancelada! O limite de saque diário foi excedido. Tente novamente mais tarde. \n")

        elif valor > 0:
            saldo -= valor
            extrato += f"Saque: R$ {valor:.2f}\n"
            numero_saques += 1

        else:
            print("Operação cancelada! Valor inválido. \n")

    elif opcao == "3":                                                                              #DEPOSITO
        valor = float(input("Digite o valor do depósito: "))                                        #Solicita o valor
    
        if valor > 0:                                                                               
            saldo += valor
            extrato += f"Depósito: R$ {valor:.2f}\n"

        else:
            print("Operação cancelada! Valor inválido. \n")


    elif opcao == "0":                                                                              #SAIR
        break

    else:                                                                                           #OPÇÕES INVÁLIDAS
        print("Operação inválida, por favor, escolha novamente a opção desejada.")
